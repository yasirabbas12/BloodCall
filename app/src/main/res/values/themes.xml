<resources>

    <style name="MainTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorPrimary">@color/changed_red</item>
        <item name="android:statusBarColor">@color/changed_red</item>
        <item name="colorAccent">@color/changed_red</item>
        <item name="snackbarStyle">@style/MySnackBarStyle</item>
        <item name="actionBarTheme">@style/ActionBarTheme</item>
    </style>


    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimary">@color/changed_red</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="LauncherTheme" parent="MainTheme">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AuxTheme" parent="Theme.MaterialComponents.Light">
        <item name="actionBarTheme">@style/ActionBarTheme</item>
        <item name="colorPrimary">@color/changed_red</item>
        <item name="android:statusBarColor">@color/changed_red</item>
        <item name="colorAccent">@color/changed_red</item>
    </style>

    <style name="ActionBarTheme" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textColor">@android:color/black</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="MySnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/changed_red</item>
    </style>


    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/dividerVertical</item>
    </style>

    <style name="CustomProgressBarTheme">
        <item name="colorAccent">@color/light_green</item>
        <item name="android:progressBarStyle">@style/Widget.AppCompat.ProgressBar.Horizontal</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/light_green</item>
        <item name="trackColorActive">@color/light_green</item>
        <item name="colorSwitchThumbNormal">@android:color/white</item>
        <item name="android:colorForeground">@android:color/white</item>
    </style>


</resources>